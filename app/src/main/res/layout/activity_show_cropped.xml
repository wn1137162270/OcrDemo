<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wn.myocr2.ShowCroppedActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/original_picture"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/original_picture_iv"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/gray_scale"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/gray_scale_iv"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/recognize_result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
